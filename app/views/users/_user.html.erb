<tr>
  <td><%= user.email %></td>
  <td><%= user.first_name %> <%= user.last_name %></td>
  <td><%= I18n.t user.role, scope: :roles %></td>
  <% unless @supplier %>
    <td><%= user.supplier.name if user.supplier_id %></td>
  <% end %>


  <td>
    <% if !user.card %>
      <p class="small text-muted">Sin tarjeta</p>
    <% elsif user.card.terms_accepted? %>
      <p class="small text-success">Tarjeta activa</p>
    <% else %>
      <p class="small text-warning">Aún debe aceptar condiciones</p>
    <% end %>
  </td>

  <td>
    <%= link_to 'Ver', [@supplier, user], class: 'btn btn-xs btn-primary' %>
    <%= link_to 'Editar', [:edit, @supplier, user], class: 'btn btn-xs btn-success' %>
    <% if is_me?(user) %>
      <button type="button" class="btn btn-xs btn-danger disabled">Eliminar</button>
    <% else %>
      <%= link_to 'Eliminar', [@supplier, user],method: :delete,
        data: {confirm: '¿Está seguro?'}, class: 'btn btn-xs btn-danger' %>
    <% end %>
  </td>
</tr>
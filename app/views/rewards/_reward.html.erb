<tr>
  <td><%= image_tag reward.image.thumb('100x200').url %></td>
  <td><%= reward.code %></td>
  <td><%= reward.name %></td>
  <td><%= reward.need_points %></td>
  <td><%= reward.real_stock.to_i %></td>
  <td><%= t reward.reward_kind, scope: :reward_kinds %></td>  
  <td><%= reward.service_types.map{|x| t(x, scope: :service_types) }.join('<br/>').html_safe %></td>  
  <td>
    <%= link_to 'Editar', edit_reward_path(reward), class: 'btn btn-xs btn-success' %>
    <%= link_to 'Eliminar', reward, method: :delete, data: {confirm: '¿Está seguro?'}, class: 'btn btn-xs btn-danger' %>
  </td>
</tr>


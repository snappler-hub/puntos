<div class="nested-fields">
  <div class="row">

    <div class="col-md-9">
      <fieldset class="form-group">
        <%= f.label :product %>
        <%= f.hidden_field :product_id, class: 'select2',
                           data: {behavior: 'searchProduct', url: search_products_path,
                                  record_id: f.object.product_id, record_text: f.object.product.try(:name)} %>
      </fieldset>
    </div>

    <div class="col-md-3">

      <div class="row">
        <div class="col-md-5">
          <fieldset class="form-group">
            <%= f.label :amount %>
            <%= f.text_field :amount, class: 'form-control', required: true, placeholder: 'Cantidad' %>
          </fieldset>
        </div>
        <div class="col-md-5">
          <fieldset class="form-group">
            <%= f.label :cost %>
            <%= f.text_field :cost, class: 'form-control js-cost', required: true, placeholder: 'Costo' %>
          </fieldset>
        </div>

        <div class="col-md-2 text-center">
          <fieldset class="form-group css-sales-btnDelete">
            <%= link_to_remove_association f, class: 'btn btn-danger btn-xs margin-top-5' do %>
                <i class="fa fa-trash"></i>
            <% end %>
          </fieldset>
        </div>
      </div>

    </div>

  </div>
</div>
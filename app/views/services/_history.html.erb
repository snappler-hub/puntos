<ul class="timeline">
  
  <% @periods.each do |period| %>
    <li>
      <% if period.expired? || period.closed? %>
        <i class="fa fa-times bg-red"></i>
      <% else %>
        <i class="fa fa-check bg-green"></i>
      <% end %>

      <div class="timeline-item">
        
        <span class="time"><i class="fa fa-calendar-o"></i> <%= l period.end_date %></span>
        
        <h3 class="timeline-header text-left"> <%= t period.status, scope: 'service_periods_statuses' %> </h3>

        <div class="timeline-body">
          <% if @service.is_a?(PointsService) %>
            <%= render partial: 'points_period', locals: { period: period } %>
          <% else %>
            <%= render partial: 'pfpc_period', locals: { period: period } %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  
  <li>
    <i class="fa fa-clock-o bg-gray"></i>
  </li>
</ul>
<header class="content-header">
  <%= link_to 'Editar', edit_supplier_path(@supplier),
      class: 'btn btn-sm btn-success pull-right' %>
  <h1>Ver Prestador</h1>
</header>

<section class="content">
<div class="row">
<div class="col-md-7">

  <article class="box box-primary">
    <header class="box-header with-border">
      <h3 class="box-title"><%= @supplier.name %></h3>
    </header>
    <!-- /.box-header -->
    <section class="box-body">

      <strong><i class="fa fa-file-text-o margin-r-5"></i> Descripci√≥n</strong>
      <p><%= @supplier.description %></p>

      <hr>

      <strong><i class="fa fa-book margin-r-5"></i> Estado</strong>
      <% if @supplier.active %>
        <p class="text-success"><%= icon_ok %> Activo</p>
      <% else %>
        <p class="text-muted"><%= icon_not_ok %> Inactivo</p>
      <% end %>

      <hr>

      <strong>
        <i class="fa fa-users margin-r-5"></i>
        Usuarios
        (<%= @supplier.users.count %>)
      </strong>

      <ul class="text-muted list-unstyled">
        <% @supplier.users.first(10).each do |user| %>
          <li><%= user.first_name %> <%= user.last_name %></li>
        <% end %>
      </ul>
      <%= link_to 'Administrar usuarios', [@supplier, :users] %>
    </section>
  </article>

</div>
</div>
</section>
<header class="content-header">
  <%= link_to 'Volver', @supplier_request,
      class: 'btn btn-default pull-right' %>
  <h1>Nuevo usuario a partir de solicitud</h1>
</header>

<section class="content">
<div class="row">
<div class="col-md-6">
<article class="box box-primary">
<section class="box-body">

<%= form_for @user_card_form, url: [:create_user, :supplier_requests] do |f| %>
  <% @user_card_form.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>

  <%= render 'users/basic_fields', f: f %>

  <fieldset class="form-group">
    <%= f.label :card_number %>
    <%= f.text_field :card_number, class: 'form-control', required: true %>
  </fieldset>

  <div class="actions">
    <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  </div>
<% end %>

</section>
</article>
</div>
</div>
</section>
<div class="nested-fields">
  <div class="row">
    <div class="col-md-4">
      <fieldset class="form-group">
        <%= f.hidden_field :product_id, class: 'select2', 
              data: { behavior: 'searchProduct', url: search_products_path,
                  record_id: f.object.product_id, record_text: f.object.product.try(:name) } %>
      </fieldset>
    </div>
    
    <div class="col-md-3">
      <fieldset class="form-group">
        <%= f.text_field :client_points, class: 'form-control', required: true, placeholder: 'Puntos cliente' %>
      </fieldset>
    </div>
    
    <div class="col-md-3">
      <fieldset class="form-group">
        <%= f.text_field :seller_points, class: 'form-control', required: true, placeholder: 'Puntos vendedor' %>
      </fieldset>
    </div>
    
    <div class="col-md-1">
      <fieldset class="form-group">
        <%= link_to_remove_association "eliminar", f, class: 'btn btn-danger' %>
      </fieldset>
    </div>
    
  </div>
</div>
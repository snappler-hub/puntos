<div class="col-md-5" id="js-authorization">
  <article class="box box-success">
    <section class="box-body">
      
      <div class="row">
        <div class="col-md-12">
          <h4>Ticket de autorizaci√≥n #<strong><%= authorization.id %></strong></h4>
        </div>
      </div>
      
      <% if authorization.ok? %>

        <div class="row">
          <div class="col-md-6">
            <h5>Vendedor: <strong><%= authorization.seller %></strong></h5>
          </div>
          <div class="col-md-6">
            <h5>Cliente: <strong><%= authorization.client %></strong></h5>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-12">
            <h5>Detalle de descuentos aplicados:</h5>
            <table id="css-authorizations-table" class="table table-striped table-condensed">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th><span data-toggle="tooltip" data-placement="top" title="Cantidad">Cant.</span></th>
                  <th><span data-toggle="tooltip" data-placement="top" title="Precio de Venta Sugerido">PVS</span></th>
                  <th><span data-toggle="tooltip" data-placement="top" title="Costo Unitario">CU</span></th>
                  <th><span data-toggle="tooltip" data-placement="top" title="Descuento aplicado">Dto</span></th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                <% for product in authorization.products do %>
                  <tr>
                    <td><%= Product.find(product[:id]).to_s %></td>
                    <td><%= product[:amount] %></td>
                    <td>nil</td>
                    <td><%= number_to_currency(product[:cost]) %></td>
                    <td><%= number_to_percentage(product[:discount], precision: 0) %></td>
                    <td><%= number_to_currency(product[:total]) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <h5>Puntos acumulados en la venta: <strong><%= authorization.points%></strong></h5>
          </div>
        </div>
        <hr>
        <%= button_to 'Confirmar venta', user_sales_path(authorization.client, authorization: authorization), class: 'btn btn-success', data: { 'disable-with' => 'Cargando...' }, method: :post %>
    
      <% else %>
      
        <div class="row">
          <div class="col-md-12">
            <h5><%= authorization.status %></h5>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-12">
            <h5><%= authorization.message %></h5>
          </div>
        </div>
        
      <% end %>
      
    </section>
  </article>
</div>
<div class="col-md-5" id="js-authorization">
  <article class="box box-success">
    <section class="box-body">

      <div class="row">
        <div class="col-md-12">
          <h3>Ticket de autorizaci√≥n #<strong><%= authorization.id %></strong></h3>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <label>Vendedor:</label>
          <%= authorization.seller %>
        </div>
        <div class="col-md-6">
          <label>Cliente:</label>
          <%= authorization.client %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <h4>Descuentos aplicados</h4>
          <table id="css-authorizations-table" class="table table-striped table-condensed">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Cantidad</th>
                <th>CU</th>
                <th>Dto(%)</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <% for product in authorization.products do %>
                <tr>
                  <td><%= Product.find(product[:id]).to_s %></td>
                  <td><%= product[:amount] %></td>
                  <td><%= product[:cost] %></td>
                  <td><%= product[:discount] %></td>
                  <td><%= product[:total] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <%= button_to 'Confirmar venta', user_sales_path(authorization.client, authorization: authorization.id), class: 'btn btn-success', data: { 'disable-with' => 'Cargando...' }, method: :post %>
    </section>
  </article>
</div>
<ul class="list-group list-group-unbordered">
  <li class="list-group-item">
    <b> Vence en </b>
    <a class="pull-right"> <%= @service.days_to_expire %> días </a>
  </li>
</ul>
<p class="text-muted text-center"> Acumulado en último Período </p>
<ul class="list-group list-group-unbordered">
  <% @service.last_period.period_products.each do |p| %>
    <li class="list-group-item">
      <b> <%= p.product %> </b>
      <div class="pull-right">
        <%= p.accumulated %> de <a> <%= p.amount %> </a>
      </div>
    </li>
  <% end %>
</ul>
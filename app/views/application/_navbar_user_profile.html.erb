<% if current_user %>

    <%= render 'shopping_cart_snippet' %>

    <!-- User Account Menu -->
    <li class="dropdown user user-menu">
      <!-- Menu Toggle Button -->
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <!-- The user image in the navbar-->
        <%= image_tag (current_user.image.present? ? current_user.image.thumb('25x25').url : 'default_avatar.png'), class: 'user-image', alt: 'Avatar' %>
        <!-- hidden-xs hides the username on small devices so only the image appears. -->
        <span class="hidden-xs"><%= "#{current_user.first_name}, #{current_user.last_name}" %></span>
      </a>
      <ul class="dropdown-menu">
        <!-- The user image in the menu -->
        <li class="user-header">
          <%= image_tag (current_user.image.present? ? current_user.image.thumb('90x90').url : 'default_avatar.png'), class: 'img-circle big-avatar', alt: 'Avatar' %>
          <p>
            <%= "#{current_user.first_name}, #{current_user.last_name}" %>
            <small><%= current_user.email %></small>
          </p>
        </li>

        <!-- Menu Body -->
        <li class="user-body">
          <div class="col-xs-4 col-xs-offset-4 text-center">
            <%= link_to 'Mi Ficha', current_user %>
          </div>
        </li>

        <!-- Menu Footer-->
        <li class="user-footer">

          <div class="pull-left">
            <%= link_to profile_path, class: 'btn btn-default btn-flat' do %>
                <i class="fa fa-key fa-fw"></i> Contraseña
            <% end %>
          </div>

          <div class="pull-right">
            <%= link_to logout_path, method: :delete, class: 'btn btn-default btn-flat' do %>
                <i class="fa fa-sign-out fa-fw"></i> Cerrar sesión
            <% end %>
          </div>
        </li>
      </ul>
    </li>

<% else %>
    <%= link_to 'Iniciar sesión', login_path %>
<% end %>

  <%= form_for @filter, url: list_shopping_cart_rewards_path, method: :get do |f| %>

  <div class="row">

    <div class="col-md-10">

      <div class="row">

        <div class="col-md-3">
          <fieldset class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </fieldset>
        </div>

        <div class="col-md-3">
          <fieldset class="form-group">
            <%= f.label :code %>
            <%= f.text_field :code, class: 'form-control' %>
          </fieldset>
        </div>

        <div class="col-md-3">
          <fieldset class="form-group">
            <%= f.label :need_points %>
            <%= f.text_field :need_points, class: 'form-control' %>
          </fieldset>
        </div>

        <div class="col-md-3">
          <fieldset class="form-group">
            <%= f.label :reward_kind %>
            <%= f.select :reward_kind,
              Reward::REWARD_KINDS.map{|kind| [t("reward_kinds.#{kind}"), kind]},
              {include_blank: 'Todos'}, {class: 'form-control'} %>
          </fieldset>
        </div>

      </div>

    </div>



    <div class="col-md-2">
      <fieldset class="form-group">
        <%= f.submit 'Filtrar', class: 'btn btn-primary', style: "margin-top: 24px;", data: { 'disable-with' => 'Cargando...'} %>
      </fieldset>
    </div>
  </div>

  <% end %>
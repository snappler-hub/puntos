<div class="row">
  <fieldset class="form-group col-md-5">
    <%= f.label :vademecum %>
    <%= f.collection_select :vademecum_id, Vademecum.all, :id, :name, {}, {class: 'form-control'} %>
  </fieldset>
</div>

<%= label_tag :products, 'Productos' %>

<div class="product_pfpcs  form-group">
  <%= f.fields_for :product_pfpcs do |p| %>
    <%= render 'product_pfpc_fields', f: p %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'Nuevo Producto', f, :product_pfpcs, class: 'btn btn-default' %>
  </div>
</div>